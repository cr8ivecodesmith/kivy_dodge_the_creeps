#:include common/sprite.kv

#:import choice random.choice
#:import randint random.randint
#:import DodgeMob mob.DodgeMob
#:import AnimatedSprite common.sprite.AnimatedSprite

<DodgeMob>:

    neutral_groups: ('mobs',)
    speed: randint(self.min_speed, self.max_speed)

    AnimatedSprite:
        id: sprite
        pos: self.parent.pos
        sprite_map: 'dodge_assets/art/enemy.atlas'
        animations: ['walking', 'flying', 'swimming']
        animation: choice(['walking', 'flying', 'swimming'])
        scale_hint: .75
        animation_speed: 3
        autoplay: True
